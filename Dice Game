import random
question = input('Would you like to roll the dice [y/n]? ')
while question != 'n':
    if question == 'y':
        die1 = random.randint(1, 6)
        die2 = random.randint(1, 6)
        list = (die1, die2)
        for i in range (1000):
        #I know range() returns a static list
        #I wanted to use xrange() to randomize results - but got errors.
            print(list)
        question = input('Would you like to roll the dice [y/n]? ')
    else:#if user inputs anything other than 'y' or 'n' - print; prompt user again for input
        print('Invalid response. Please type "y" or "n".')
        question = input('Would you like to roll the dice [y/n]? ')
print('Gamer Over!')

